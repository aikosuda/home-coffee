<div id="like_form_<%= blog.id %>" class="text-center">
	<% if blog.favorited_by?(current_user) %>
		<div class="favorite-form">
  			<%= link_to blog_unlike_path(blog), method: :delete, remote: true do %>
    			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
   				<%= blog.favorites.count %> いいね
  			<% end %>
		</div>
	<% else %>
		<div class="favorite-form">
		  	<%= link_to blog_like_path(blog), method: :post, remote: true do %>
   				<i class="fa fa-heart" aria-hidden="true"></i>
    			<%= blog.favorites.count %> いいね
  			<% end %>
		</div>
	<% end %>
</div>