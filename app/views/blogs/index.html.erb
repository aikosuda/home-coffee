<div class="row">
	<div class="col-xs-3">
		<div class="sidebar" style="width: 20rem;">
			<div class="genre-title text-center">タグリスト</div>
			<ul class="list-group list-group-flush">
				<% @tag_list.each do |list| %>
					<li class="list-group-item text-center">
						<%= link_to list.name, tag_blogs_path(name: "#{list.name}"), method: :post, :style =>"color:black" %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>

	<div class="col-xs-9">
		<div class="index-title">
			<span>
				<% if @tag %>
					<%= @tag.name %>のブログ記事一覧
				<% else %>
					ブログ記事一覧
				<% end %>
			</span>
		</div>

		<ul class="list-group list-group-flush">
			<% @blogs.each do |blog| %>
				<li class="list-group-item text-center">
					<%= link_to blog_path(blog) do %>
						<%= attachment_image_tag blog, :image, size: "120x90", fallback: 'no_image.png',size: "120x90" %>
						<%= blog.title %>
					<% end %>
					<% if blog.favorited_by?(current_user) %>
  						<%= link_to blog_favorites_path(blog), method: :delete do %>
    						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    						<%= blog.favorites.count %> いいね
  						<% end %>
			
					<% else %>
  						<%= link_to blog_favorites_path(blog), method: :post do %>
   							<i class="fa fa-heart" aria-hidden="true"></i>
    						<%= blog.favorites.count %> いいね
  						<% end %>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
</div>