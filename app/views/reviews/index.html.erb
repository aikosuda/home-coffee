<div class="container container-padding">
<div class="row">
	<div class="col-xs-3">
		<div class="sidebar" style="width: 20rem;">
			<div class="genre-title text-center">CATEGORY</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item text-center">
					<%= link_to "全カテゴリー", reviews_path, :style => "color:black" %>
				</li>
				<% @review_categories.each do |category| %>
					<li class="list-group-item text-center">
						<%= link_to category.name, category_reviews_path(name: "#{category.name}"),
						method: :post, :style =>"color:black" %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>

	<div class="col-xs-9">

		<div class="content-box">
			<p class="text-center">
				<% if @review_category %>
					<%= @review_category.name %>
				<% else %>
					全レビュー
				<% end %>
			</p>
		</div>
		<div class="review-index">
			<% @reviews.each do |review| %>
				<div class="review-item">
					<%= link_to review_path(review) do %>
						<div>
							<%= attachment_image_tag review, :image, size: "200x150", fallback: 'no_image.png',size: "200x150", class: "content-image" %>
						</div>
						<div class="text-center review-name">
							<%= review.name %><br>
							<%= review.updated_at.strftime("%Y-%m-%d") %>
							<div class="text-center" id="star-rate" data-score="<%= review.rate %>"></div>
						</div>
						<div class="review-content">
							<p><%= review.content %></p>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<%= paginate @reviews %>
	</div>
</div>

	</div>
</div>
</div>

<%# 星評価 %> 
<script>
	$('#star-rate').raty({
        readOnly: true,
        size: 36,
   		starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
    	score: function() {
     	 return $(this).attr('data-score');
    	},
    });
</script>

