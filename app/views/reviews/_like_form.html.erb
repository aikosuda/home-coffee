<div id="like_form_<%= review.id %>" class="text-center">
	<% if review.favorited_by?(current_user) %>
		<div class="favorite-form">
  			<%= link_to review_unlike_path(review), method: :delete, remote: true do %>
    			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
   				<%= review.favorites.count %> いいね
  			<% end %>
		</div>
	<% else %>
		<div class="favorite-form">
		  	<%= link_to review_like_path(review), method: :post, remote: true do %>
   				<i class="fa fa-heart" aria-hidden="true"></i>
    			<%= review.favorites.count %> いいね
  			<% end %>
		</div>
	<% end %>
</div>