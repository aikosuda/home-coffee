<div class="row">
	<h3>レビュー検索</h3>
	<div class="col-xs-6">
		<div>カテゴリから検索</div>
		<ul>
			<li class="list-group-item text-center">
					<%= link_to "全カテゴリー", reviews_path, :style => "color:black" %>
			</li>
			<% @review_categories.each do |category| %>
				<li class="list-group-item text-center"><%= link_to category.name, category_reviews_path(name: "#{category.name}"),
						method: :post, :style =>"color:black" %>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="col-xs-6">
		<div>キーワードで検索</div>

        <nav class="navbar navbar-left">
           	<%= form_tag(search_reviews_path, method: :get ) do %>
              	<%= select_tag(:option, options_for_select([["ユーザー名", "1"],["商品名", "2"]])) %>
              	<%= text_field_tag :search %>
              	<button name='button' type='submit'>
                	<i class="fa fa-search"></i>
              	</button>
            <% end %>
        </nav>

</div>